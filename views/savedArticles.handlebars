{{!-- Modal to display notes --}}

<div class="modal" tabindex="-1" role="dialog" id = "notesModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Article Note</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <div id = "displayNotes">
            {{!-- Placeholder for saved notes --}}
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal" id = "closeNote">Close</button>
        <button type="button" class="btn btn-secondary" id = "saveNote">Save changes</button>
      </div>
    </div>
  </div>
</div>

{{!-- Saved Articles will be displayed here --}}

<div class="container-fluid">
  <div class="col-lg-12" id="savedArticles">
    {{#each article}}
    <div id={{this.id}}>
      <div class="card border-danger mb-3">
        <h3 class="card-header bg-secondary text-white"><a href = {{this.link}} target = "_blank">{{this.title}}</a>
        </h3>
        <div class="card-body bg-white text-dark">
          <div class = "row">
            <div class = "col-md-8">
                <p class="card-text">{{this.summary}}</p>
            </div>
            <div class = "col-md-4">
              <img src = {{this.img}} class = "img-thumbnail" alt = "Article Image">
              <button class="btn btn-outline-dark btn-sm" id="seeNotesBtn" data-id={{this.id}}>Notes ({{this.notes.length}})</button>
              <button class="btn btn-outline-danger btn-sm float-sm-right" id="deleteArticleBtn" data-id={{this.id}}>Delete Article</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>