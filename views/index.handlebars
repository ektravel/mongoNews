
<div class="container-fluid">
  <div class="col-lg-12" id="scrapedArticles">
    {{#each article}}
    <div id={{this.id}}>
      <div class="card border-dark mb-3">
        <h3 class="card-header bg-secondary text-white"><a href = {{this.link}} target = "_blank">{{this.title}}</a>
        </h3>
        <div class="card-body bg-white text-dark">
          <div class = "row">
            <div class = "col-md-8">
                <p class="card-text">{{this.summary}}</p>
            </div>
            <div class = "col-md-4">
              <img src = {{this.img}} class = "img-thumbnail" alt = "Article Image">
              <button class="btn btn-outline-dark btn-sm" id="saveArticleBtn" data-id={{this.id}}>Save Article</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>

    {{#if article}}
    <footer class = "footer footer-dark bg-dark text-center">
        <button type = "button" class = "btn btn-sm btn-danger" id = "dropDB">Clear All Records</button>
    </footer>
    {{/if}}

