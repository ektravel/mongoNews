
<div class="container-fluid">
  <div class="col-lg-12" id="scrapedArticles">
    {{#each article}}
    <div id={{this.id}}>
      <div class="card">
        <h3 class="card-header bg-secondary text-white"><a href = {{this.link}} target = "_blank">{{this.title}}</a>
        </h3>
        <div class="card-body bg-white text-dark">
          <p class="card-text">{{this.summary}}</p>
          <img src = {{this.img}} alt = "Article Image">
          <button class="btn btn-success btn-sm" id="saveArticleBtn" data-id={{this.id}}>Save Article</button>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>

